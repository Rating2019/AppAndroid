<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context=".MyControl">

    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_power"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/fondobot2"
            android:src="@mipmap/icon_apagar" />

        <TextView
            android:id="@+id/idfh_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/button_mute"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/fondobot2"
            android:src="@mipmap/icon_mute" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_1"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:layout_margin="5dp"
                android:background="@drawable/fondobot2"
                android:text="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:layout_margin="5dp"
                android:background="@drawable/fondobot2"
                android:textStyle="bold"
                android:text="2"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="3"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_4"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="4" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_7"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="8" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:layout_margin="5dp"
                android:background="@drawable/fondobot2"
                android:text="9"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_punt"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="." />

            <Button
                android:id="@+id/button_0"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="0" />

            <Button
                android:id="@+id/button_prech"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:background="@drawable/fondobot2"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Prech" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_volmas"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/button_op"
                android:background="@drawable/fondobot2"
                android:src="@mipmap/icon_mas"/>

            <TextView
                android:id="@+id/idcanal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/button_chup"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/button_op"
                android:background="@drawable/fondobot2"
                android:src="@mipmap/icon_arriba" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idhora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_ent"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/margin_button"
                android:textStyle="bold"
                android:background="@drawable/fondobot2"
                android:text="Enter" />

            <TextView
                android:id="@+id/idduracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_volmenos"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/button_op"
                android:background="@drawable/fondobot2"
                android:src="@mipmap/icon_menos" />

            <TextView
                android:id="@+id/idfecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/button_chdown"
                android:layout_width="@dimen/margin_button"
                android:layout_height="@dimen/button_op"
                android:background="@drawable/fondobot2"
                android:src="@mipmap/icon_abajo" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:text="Salir" />

</LinearLayout>