<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5sp">

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10sp"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:contentPaddingBottom="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fotouser"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginBottom="5sp"
                android:src="@mipmap/fondo"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/nombre_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Marcelo"
                    android:textSize="18sp"
                    android:textColor="@color/colorText2"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/idparentezco"
                        android:paddingLeft="15sp"
                        android:paddingRight="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Docente: "
                        android:textSize="14sp"
                        android:textColor="@color/colorText2"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/idage"
                        android:layout_weight="3"
                        android:paddingRight="35sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="12sp"
                        android:textColor="@color/colorText2"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/idsexo"
                        android:layout_weight="3"
                        android:paddingRight="35sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="12sp"
                        android:textColor="@color/colorText2"
                        android:textStyle="italic" />

                </LinearLayout>
                <TextView
                    android:id="@+id/idmodificar"
                    android:layout_weight="3"
                    android:paddingRight="35sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="12sp"
                    android:textColor="@color/colorText2"
                    android:textStyle="italic"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>